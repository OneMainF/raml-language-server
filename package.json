{
	"name": "raml-ls",
	"displayName": "RAML Language Server",
	"description": "An extension for VS Code that performs validation of RAML files.",
	"publisher": "OneMain",
	"license": "GNU",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/OneMainF/raml-language-server"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"multi-root ready",
		"raml",
		"RAML 1.0",
		"language server",
		"lsp"
	],
	"engines": {
		"vscode": "^1.33.0"
	},
	"activationEvents": [
		"onLanguage:raml"
	],
	"main": "./client/out/extension",
	"extensionDependencies": [
		"jeppeandersen.raml"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "RAML LS",
			"properties": {
				"RAML-LS.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"RAML-LS.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [{
			"id": "raml",
			"extensions": [
				".raml"
			],
			"aliases": [
				"RAML",
				"raml",
				"RAML 1.0"
			]
		}]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"tslint": "^5.16.0",
		"typescript": "^3.6.4"
	}
}